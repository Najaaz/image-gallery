<main class="d-flex flex-wrap mt-4 justify-content-between">

    <h1 class="text-center w-100 fw-bold my-1"><%= @gallery[:title] %></h1>
    <h5 class="text-center w-100 mt-0 mb-4">By: <%= @user[:name] %></h5>

    <div class="w-100">
        <%= link_to 'Back to all Galleries', root_path, class:"btn btn-primary my-2 fw-bold" %>
    </div>

    
    <div class="d-flex flex-wrap justify-content-around">
        <% @gallery_images.each_with_index do |image, index| %>
            <div class="img-holder m-2">
                <img src="<%= image[:image_url] %>" class="rounded" alt="Gallery Image" data-bs-toggle="modal" href="#exampleModalToggle" role="button" data-button-id="<%= index %>">
            </div>
        <% end %>
    </div>
    
</main>

<%= render 'popup'%>